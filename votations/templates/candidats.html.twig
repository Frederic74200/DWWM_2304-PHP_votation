{% extends 'base.html.twig' %}

{% block title %}Liste des candidats{% endblock %}

{% block body %}
    <header>
        <nav class="menu">
            <ul>
                <li><a href="http://localhost:3000/candidats">Liste des candidats</a></li>
                <li><a href="voter.html">Voter</a></li>
            </ul>
        </nav>
    </header>
    <main id="app">
        <h1 class="center">Élections des représentants</h1>
        <p class="center">{{ nbCandidats }} candidats</p>
        <section>
         {% for candidat in candidats %}
         <div>
            <h2> {{candidat['lastname']}} {{candidat['firstname']}}</h2>
             <img src="http://localhost:3000/assets/candidats/{{candidat['id']}}.jpg " alt="{{candidat['id']}}">
        </div>

        {% endfor %}
        </section>
        <button type="button" class="voter">Je vote !</button>
    </main>
    <footer>
        <p>Copyright 2024 DWWM2304</p>
    </footer>
{% endblock %}
